@model Web.Models.ProductModel

@{
  ViewData["Title"] = "Detalles";
}

<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">@Model.Name</h5>
      <p class="card-text">@Model.Description</p>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Stock: @Model.Stock</li>
        <li class="list-group-item">Precio: S/. @Model.Price</li>
      </ul>
      <div class="card-body">
        <a class="card-link" asp-action="Index">Volver</a>
      </div>
    </div>
  </div>
</div>
